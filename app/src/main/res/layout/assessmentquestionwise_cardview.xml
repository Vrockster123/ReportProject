            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/assessmentQuestionWiseQuestionNumber"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
